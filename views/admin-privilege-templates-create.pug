extends admin-home

block admin-content
    if error
        h2.error= error
    if success
        h2.success= success
    form.myaccount-form(method='POST' action='')
        label(for='myaccount-privilege-template-create-form-name') Name
        input#myaccount-privilege-template-create-form-name(
            class=(nameInvalid ? "is-invalid" : undefined)
            type='text'
            name='name'
            placeholder='Name'
            value= name
        )
        .invalid-feedback Enter a valid name
        br
        label(for='myaccount-privilege-template-create-form-title') Title
        input#myaccount-privilege-template-create-form-title(
            class=(titleInvalid ? "is-invalid" : undefined)
            type='text'
            name='title'
            placeholder='Title'
            value= ptTitle
        )
        .invalid-feedback Enter a valid title
        br
        input(type='hidden' name='nonce' value=formNonce)
        input(
            type='submit'
            value='Save'
        )