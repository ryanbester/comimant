extends ../layout

block my-account-content
    if services
        .myaccount-stack-view
            a.myaccount-stack-view__box.myaccount-stack-view__box--related(href='/myaccount/security/passwords/change-password')
                span #{app.settings.title}
                img.myaccount-stack-view__box-image(src= staticProtocol + staticDomain + '/assets/images/rightarrow16x16.png' srcset= staticProtocol + staticDomain + '/assets/images/rightarrow32x32.png 2x')
            each service in services
                a.myaccount-stack-view__box.myaccount-stack-view__box--related(href='/myaccount/services/' + service.name + '/' + service.passwordPage)
                    span= service.title
                    img.myaccount-stack-view__box-image(src= staticProtocol + staticDomain + '/assets/images/rightarrow16x16.png' srcset= staticProtocol + staticDomain + '/assets/images/rightarrow32x32.png 2x')
    else
        .myaccount-stack-view
            a.myaccount-stack-view__box.myaccount-stack-view__box--related(href='/myaccount/security/passwords/change-password')
                span #{app.settings.title}
                img.myaccount-stack-view__box-image(src= staticProtocol + staticDomain + '/assets/images/rightarrow16x16.png' srcset= staticProtocol + staticDomain + '/assets/images/rightarrow32x32.png 2x')
        if error
            p= error
        else
            p Error