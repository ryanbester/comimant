extends admin-home

block admin-content
    if error
        h2.error= error
    if success
        h2.success= success
    form.myaccount-form(method='POST' action='')
        label(for='admin-user-name-form-first-name') First name
        input#admin-user-name-form-first-name(
            class=(firstNameInvalid ? "is-invalid" : undefined)
            type='text'
            name='firstName'
            placeholder='First name'
            value= firstName
        )
        .invalid-feedback Enter a valid first name
        br
        label(for='admin-user-name-form-last-name') Last name
        input#admin-user-name-form-last-name(
            class=(lastNameInvalid ? "is-invalid" : undefined)
            type='text'
            name='lastName'
            placeholder='Last name'
            value= lastName
        )
        .invalid-feedback Enter a valid last name
        br
        input(type='hidden' name='nonce' value=formNonce)
        input(
            type='submit'
            value='Save'
        )