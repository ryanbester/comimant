extends admin-home

block admin-content
    if error
        h2.error= error
    if success
        h2.success= success
    form.myaccount-form(method='POST' action='')
        label(for='admin-user-name-form-email') Email Address
        input#admin-user-name-form-email(
            class=(emailInvalid ? "is-invalid" : undefined)
            type='email'
            name='email'
            placeholder='Email Address'
            value= email
        )
        .invalid-feedback Enter a valid email address
        br
        input(type='hidden' name='nonce' value=formNonce)
        input(
            type='submit'
            value='Save'
        )